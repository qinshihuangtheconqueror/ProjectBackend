extends ../../Layout/default.pug
include ../../Mixin/image-preview-single.pug
include ../../Mixin/alert.pug
block main
  +alert-error(3000)
  h1(class="mb-4") Tạo Mới Sản Phẩm
  form(
    action=`${prefixAdmin}/products/edit/${record.id}?_method=PATCH`
    id="form-edit-product"
    method="POST"
    enctype="multipart/form-data"
  )
    div(class="form-group")
      label(for="title") Tiêu đề
      input(
        type="text"
        class="form-control"
        id="title"
        name="title"
        value=record.title
      )
    div(class="form-group")
      label(for="desc") Mô tả
      textarea(
        tinymce
        class="form-control"
        id="desc"
        name="description"
        rows="5"
      ) #{record.description}
    div(class="form-group")
      label(for="desc") Nội Dung
      textarea(
        tinymce
        class="form-control"
        id="content"
        name="content"
        rows="5"
      ) #{record.content}
    div(class="form-group")
      label(for="price") Giá
      input(
        type="number"
        class="form-control"
        id="price"
        name="price"
        value=record.price
      
      )
    div(class="form-group")
      label(for="discount") % Giảm giá
      input(
        type="number"
        class="form-control"
        id="discount"
        name="discountPercentage"
        value=record.discountPercentage
      
      )
    div(class="form-group")
      label(for="stock") Số lượng
      input(
        type="number"
        class="form-control"
        id="stock"
        name="stock"
        value=record.stock
        min="0"
      )
    div(
      class="form-group"
    )
      label(for="thumbnail") Ảnh
      +image-preview-single(record.thumbnail)
     
    div(class="form-group")
      label(for="position") Vị trí
      input(
        type="number"
        class="form-control"
        id="position"
        name="position"
        placeholder="Tự động tăng"
        min="1"
        value =record.position
      )
    div(class="form-group form-check form-check-inline")
      input(
        type="radio"
        class="form-check-input"
        id="statusActive"
        name="status"
        value="active"
        checked = record.status === "active"
      )
      label(for="statusActive" class="form-check-label") Hoạt động
    div(class="form-group form-check form-check-inline")
      input(
        type="radio"
        class="form-check-input"
        id="statusInActive"
        name="status"
        value="inactive"
        checked = record.status === "inactive"
      )
      label(for="statusInActive" class="form-check-label") Dừng hoạt động
    div(class="form-group")
      button(
        type="submit"
        class="btn btn-primary"
      ) Sửa Sản Phẩm

  script(src="/Admin/Js/products.js") 